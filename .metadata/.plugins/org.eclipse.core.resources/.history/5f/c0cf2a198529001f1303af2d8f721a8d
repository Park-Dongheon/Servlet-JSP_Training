<%@ page language="java" contentType="text/html; charset=UTF-8"
    pageEncoding="UTF-8"%>

<!DOCTYPE html>
<html>
<head>
<meta charset="UTF-8">
<title>구구단</title>
<style>
    .gugudan-container {
        display: grid;
        grid-template-columns: repeat(<%= col %>, 1fr);
        gap: 10px;
    }
    .gugudan-item {
        border: 1px solid #000;
        padding: 10px;
        text-align: center;
    }
</style>
</head>
<body>
    <h2 style="width:<%= col * 100 %>px; text-align:center;">구구단</h2>
    <div class="gugudan-container">
    <%
        for (int i = 2; i <= 9; i += col) {
            for (int k = 0; k <= 9; k++) {
                for (int j = 0; j < col; j++) {
    %>
        <div class="gugudan-item">
    <%
                    if (9 < i + j) {
                        out.print("");
                    } else {
                        if (k == 0) {
                            out.print("<h3>" + (i + j) + "단</h3>");
                        } else {
                            out.print(String.format("%d x %d = %d<br>", i + j, k, (i + j) * k));
                        }
                    }
    %>
        </div>
    <%
                }
            }
        }
    %>
    </div>
</body>
