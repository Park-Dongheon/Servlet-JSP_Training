<%			} else { %>
				<td><input type="text" name="num1" value="<%= snum1 %>"/></td>
<%			} 	%>						
		</tr>
		<tr>
			<td>숫자2:</td>
<%			if (snum2 == null) { %>
				<td><input type="text" name="num2" placeholder="숫자를 입력하세요."/></td>
<%			} else { %>
				<td><input type="text" name="num2" value="<%= snum2 %>"/></td>
<%			}	 %>											
		</tr>
		
		<tr>
