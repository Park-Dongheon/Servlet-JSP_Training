	<%
	// 변수 선언
	String result;
	int dan = 2;

	try {
		// HTTP 요청을 통해 전달된 dan 파라미터 값 가져오기
		// ex) http://localhost:8080/missionJSP/Gugudan1.jsp?dan=2
		dan = Integer.parseInt(request.getParameter("dan"));

	} catch (Exception e) {
		result = "Invalid";
	}
	out.print(String.format("<h2>%d단</h2>", dan));
	for (int i = 1; i <= 9; i++) {
		out.println(dan + " * " + i + " = " + (dan * i) + "<br />");
	}
	%>

